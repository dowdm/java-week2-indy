{{#partial "content"}}

{{#if editTeam}}
<h1>Edit this Team!</h1>
<form action="/teams/{{editTeam.id}}/update" method="post">
    <div class="form-group">
        <label for="name">Edit team name:</label>
        <input id="name" name="name" type="text" value="{{editTeam.teamName}}">
    </div>
    <div>
        <h5>Current members</h5>
        {{#each editTeam.teamMembers}}
        <p>{{this}}</p>
        {{/each}}
    </div>
    <div class="form-group">
        <label for="memberOne">Additional Member</label>
        <input id="memberOne" name="member1" type="text">
    </div>
    <div class="form-group">
        <label for="memberTwo">Additional Member</label>
        <input id="memberTwo" name="memberTwo" type="text">
    </div>
    <div class="form-group">
        <label for="memberThree">Additional Member</label>
        <input id="memberThree" name="memberThree" type="text">
    </div>
    <div class="form-group">
        <label for="memberFour">Additional Member</label>
        <input id="memberFour" name="memberFour" type="text">
    </div>
    <div class="form-group">
        <label for="description">A brief description of your team and goal</label>
        <input id="description" name="description" type="text" value="{{editTeam.teamDescription}}">
    </div>
    <button type="submit" class="btn btn-default">Update Team!</button>
</form>
{{else}}

<h1>Create a new Team!</h1>

<form action="/teams/new" method="post">
    <div class="form-group">
        <label for="name">Enter team name:</label>
        <input id="name" name="name" type="text" >
    </div>
    <div class="form-group">
        <label for="memberOne">Member 1</label>
        <input id="memberOne" name="memberOne" type="text" >
    </div>
    <div class="form-group">
        <label for="memberTwo">Member 2</label>
        <input id="memberTwo" name="memberTwo" type="text"">
    </div>
    <div class="form-group">
        <label for="memberThree">Member 3</label>
        <input id="memberThree" name="memberThree" type="text">
    </div>
    <div class="form-group">
        <label for="memberFour">Member 4</label>
        <input id="memberFour" name="memberFour" type="text"}">
    </div>
    <div class="form-group">
        <label for="description">A brief description of your team and goal</label>
        <input id="description" name="description" type="text">
    </div>
    <button type="submit" class="btn btn-default">Create Team!</button>
    {{/if}}

</form>
{{/partial}}

