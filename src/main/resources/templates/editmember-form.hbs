{{#partial "content"}}
<h1>Edit Member</h1>
<form action="/members/{{editMember.id}}/update" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input id="name" name="name" type="text" value="{{editMember.name}}">
    </div>
    <button type="submit" class="btn btn-default">Update Member</button>
</form>

{{/partial}}

